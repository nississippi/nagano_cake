<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10">
      <h5 class = "m-5"><span class = "bg-light">　新規会員登録　</span></h5>
    </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10">
      <div class="error-explanation">
        <%= render "public/shared/error_messages", resource: resource %>
      </div>
      <table class = "table table-borderless">
        <tbody>
          <%= form_with model: @customer, url: customer_registration_path do |f| %>
          <tr>
            <th>氏名</th>
            <td>（姓）</td>
            <td><%= f.text_field :last_name %></td>
            <td>（名）</td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <th>フリガナ</th>
            <td>（セイ）</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td>（メイ）</td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td></td>
            <td colspan="3"><%= f.text_field :address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>パスワード（６文字以上）</th>
            <td></td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th>パスワード（確認用）</th>
            <td></td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td></td>
            <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10">
      <h5 class = "m-5"><span class = "bg-light">　すでに登録済みの方　</span></h5>
      <%= link_to "こちら", customer_session_path %>からログインしてください
    </div>
  </div>
</div>