<h1>商品一覧</h1>
全<%= @items.count %>件
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>画像</th>
      <th>商品名</th>
      <th>税込価格</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag item.image %></td>
        <td><%= link_to item.name, item_path(item.id) %></td>
        <td>¥<%= (item.price*1.1).floor %></td>
      </tr>
    <% end %>
  </tbody>
</table>