<h1>注文履歴詳細</h1>
<table>
  <tr>
    <th>注文日</th>
    <td><%= l @order.created_at %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= @order.shipping_postal_code %><br>
      <%= @order.shipping_address %><br>
      <%= @order.shipping_name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_i18n %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.order_status_i18n %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order_details.each do |order| %>
    <tr>
      <td><%= order.item.name %></td>
      <td><%= order.item.tax_included_price %></td>
      <td><%= order.amount %></td>
      <td><%= order.subtotal %></td>
      <% @total += order.subtotal %>
    </tr>
    <% end %>
  </tbody>
</table>

<table>
  <tr>
    <th>商品合計</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @order.postage %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @total + @order.postage %></td>
  </tr>
</table>