<div class = "container">
  <div class = "row">
    <div class = "col-lg-10">
      <h5 class = "mx-5 my-5"><span class = "bg-light">　注文履歴詳細　</span></h5>
    </div>
  </div>
  <div class = "row">
    <div class = "col-lg-6">
      <table class = "table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              <%= @order.shipping_postal_code %><br>
              <%= @order.shipping_address %><br>
              <%= @order.shipping_name %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @order.order_status_i18n %></td>
          </tr>
        </thead>
      </table>
    </div>

    <div class = "col-lg-4">
      <table class = "table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td><%= @total + @order.postage %></td>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-8">
      <table class = "table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
          <% @order_details.each do |order| %>
          <tr>
            <td><%= order.item.name %></td>
            <td><%= order.item.tax_included_price %></td>
            <td><%= order.amount %></td>
            <td><%= order.subtotal %></td>
            <% @total += order.subtotal %>
          </tr>
          <% end %>
        </thead>
      </table>
    </div>
  </div>
</div>