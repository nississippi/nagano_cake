<h1>注文情報入力</h1>
<%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <%= f.radio_button :payment, Order.payments.key(0) %>
  <%= f.label :payment, Order.payments_i18n[:credit_card] %>
  <%= f.radio_button :payment, Order.payments.key(1) %>
  <%= f.label :payment, Order.payments_i18n[:transfer] %>

  <%= f.radio_button :select_address, 0 %>
  <%= current_customer.address %>
  <%= f.radio_button :select_address, 1 %>
  <%= f.select :shipping_address, options_from_collection_for_select(current_customer.addresses.all, :id, :address) %>
  <%= f.radio_button :select_address, 2 %>
  <%= f.label :'郵便番号（ハイフンなし）' %>
  <%= f.text_field :postal_code, class:"form-contol", placeholder:"0000000" %>
  <%= f.label :'住所' %>
  <%= f.text_field :address, class:"form-contol", placeholder:"住所" %>
  <%= f.label :'宛名' %>
  <%= f.text_field :name, class:"form-control", placeholder:"宛名" %>

  <%= f.submit '確認画面へ進む', class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>