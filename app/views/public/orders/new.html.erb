<h1>注文情報入力</h1>
<div>
  <%= form_with model: @order, url: orders_confirm_path, method: :post do |f| %>
  <div>
    <%= f.radio_button :payment, Order.payments.key(0) %>
    <%= f.label :payment, Order.payments_i18n[:credit_card] %>
    <%= f.radio_button :payment, Order.payments.key(1) %>
    <%= f.label :payment, Order.payments_i18n[:transfer] %>
  </div>

  <div>
    <%= f.radio_button :select_address, 0 %>
    <%= f.label "ご自身の住所" %>
    <%= current_customer.address %>
  </div>

  <div>
    <%= f.radio_button :select_address, 1 %>
    <%= f.label "登録済住所から選択" %>
    <%= f.select :address_id,
    options_from_collection_for_select(current_customer.addresses.all, :id, :address_display) %>
  </div>

  <div>
    <%= f.radio_button :select_address, 2 %>
    <%= f.label "新しいお届け先" %>
    <%= f.label :'郵便番号（ハイフンなし）' %>
    <%= f.text_field :shipping_postal_code, class:"form-contol", placeholder:"郵便番号" %>
    <%= f.label :'住所' %>
    <%= f.text_field :shipping_address, class:"form-contol", placeholder:"住所" %>
    <%= f.label :'宛名' %>
    <%= f.text_field :shipping_name, class:"form-control", placeholder:"宛名" %>
  </div>

    <%= f.submit '確認画面へ進む', class:"btn btn-lg btn-block btn-info mt-4" %>
  <% end %>
</div>
