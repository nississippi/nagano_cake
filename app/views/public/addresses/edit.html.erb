<div class = "container">
  <div class = "row">
    <div class = "col-lg-10">
      <h5 class = "mx-5 mt-5"><span class = "bg-light">　配送先登録/一覧　</span></h5>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-10 mt-3">
      <%= form_with model: @address, url: address_path(@address.id) do |f| %>
      <%= render "public/shared/error_messages", resource: @address %>
      <table class ="table table-borderless">
        <thead>
          <tr>
            <th><%= f.label :'郵便番号（ハイフンなし）' %></th>
            <td>
              <%= f.text_field :postal_code, class:"form-control", placeholder:"0000000" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :'住所' %></th>
            <td>
              <%= f.text_field :address, class:"form-control", placeholder:"住所" %>
            </td>
          </tr>
          <tr>
            <th><%= f.label :'宛名' %></th>
            <td>
              <%= f.text_field :name, class:"form-control", placeholder:"宛名" %>
            </td>
            <td>
              <%= f.submit '変更内容を保存', class:"btn btn-success" %>
            </td>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>
</div>