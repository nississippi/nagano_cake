<h1>配送先登録/一覧</h1>

<div class="error-explanation">
  <% if @address.errors.any? %>
    <h3><%= @address.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @address do |f| %>
  <%= f.label :'郵便番号（ハイフンなし）' %>
  <%= f.text_field :postal_code, class:"form-contol", placeholder:"0000000" %>
  <%= f.label :'住所' %>
  <%= f.text_field :address, class:"form-contol", placeholder:"住所" %>
  <%= f.label :'宛名' %>
  <%= f.text_field :name, class:"form-control", placeholder:"宛名" %>
  <%= f.submit '新規登録', class:"btn btn-lg btn-block btn-info mt-4" %>
<% end %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>