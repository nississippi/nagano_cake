<div class = "container">
  <div class = "row">
    <div class = "col-lg-10">
      <h5 class = "mx-5 mt-5"><span class = "bg-light">　配送先登録/一覧　</span></h5>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-10 mt-3">
      <%= form_with model: @address do |f| %>
      <%= render "public/shared/error_messages", resource: @address %>
      <table class ="table table-borderless">
        <thead>
          <tr>
            <th class = "col-lg-3"><%= f.label :'郵便番号（ハイフンなし）' %></th>
            <td class = "col-lg-3">
              <%= f.text_field :postal_code, class:"form-control", placeholder:"0000000" %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <tr>
            <th><%= f.label :'住所' %></th>
            <td colspan="2">
              <%= f.text_field :address, class:"form-control", placeholder:"住所" %>
            </td>
            <td></td>
          </tr>
          <tr>
            <th><%= f.label :'宛名' %></th>
            <td>
              <%= f.text_field :name, class:"form-control", placeholder:"宛名" %>
            </td>
            <td></td>
            <td>
              <%= f.submit '新規登録', class:"btn btn-success" %>
            </td>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-lg-10 mt-3">
      <table class ="table table-bordered">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address.id),class:"btn btn-success" %>
                <%= link_to "削除する", address_path(address.id), method: :delete,class:"btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>