<h1>会員情報編集</h1>

<%= form_with model: @customer, url: customers_information_path do |f| %>

  <%= render "public/shared/error_messages", resource: @customer %>

  <div class="field">
    <%= f.label :'氏名' %><br />
    <%= f.text_field :last_name %><%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :'フリガナ' %><br />
    <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :'郵便番号' %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :'住所' %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :'電話番号' %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "登録内容を保存する" %>
  </div>

  <%= link_to "退会する", customers_unsubscribe_path %>

<% end %>
