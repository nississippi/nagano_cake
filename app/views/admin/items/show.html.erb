<div class = "container">
  <div class = "row">
    <div class = "col-lg-8 mx-auto">
      <h5 class = "m-5"><span class = "bg-light">　商品詳細　</span></h5>
    </div>
  </div>

  <div class = "row">
    <div class = "offset-lg-1 col-lg-4">
      <%= image_tag @item.get_image(300, 300) %>
    </div>
    <div class = "col-lg-6">
      <table>
        <tbody>
          <tr>
            <th class="align-top">商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th class="align-top">商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th class="align-top">ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th class="align-top">
              税込価格　<br>
              （税抜価格）
            </th>
            <td>
              <%= @item.tax_included_price.to_s(:delimited) %>
              （<%= @item.price.to_s(:delimited) %>）円
            </td>
          </tr>
          <tr>
            <th class="text-nowrap align-top">販売ステータス　</th>
            <td>
              <% if @item.is_active == true %>
                <p class="text-success">販売中</p>
              <% else %>
                <p class="text-secondary">販売停止中</p>
              <% end %>
            </td>
          </tr>
          <tr>
            <td colspan="2", class="text-center">
              <%= link_to "編集する", edit_admin_item_path(@item), class:"btn btn-success" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>