<div class = "container">
  <div class = "row">
    <div class = "col-lg-10 mx-auto">
      <h5 class = "bg-light">管理者ログイン</h5>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-group">
          <%= f.label "メールアドレス", class: "col-lg-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
        </div>
        <div class="form-group">
          <%= f.label "パスワード", class: "col-lg-2" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
        </div>
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>

  </div>


</div>
