
<div class = "container vh-100">
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10 mx-auto">
      <h5 class = "m-5"><span class = "bg-light">　管理者ログイン　</span></h5>

      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class = "form-group text-center mt-5">
          <%= f.label "メールアドレス", class: "col-lg-3" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-5" %>
        </div>
        <div class = "form-group text-center">
          <%= f.label "パスワード", class: "col-lg-3" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-5" %>
        </div>
        <div class="actions text-center m-4">
          <%= f.submit "　ログイン　", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>

  </div>


</div>
