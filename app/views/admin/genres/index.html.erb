<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10 mx-auto">
      <h5 class = "m-5"><span class = "bg-light">　ジャンル一覧・追加　</span></h5>
    </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12 col-md-12 col-lg-10 mx-auto">
      <div class="error-explanation">
        <% if @genre.errors.any? %>
          <h3><%= @genre.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @genre.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12 col-md-10 col-lg-6">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
        <table class = "table table-borderless">
          <tbody>
            <th><%= f.label :"ジャンル名　" %></th>
            <td><%= f.text_field :name, class:"form-control" %></td>
            <td><%= f.submit'新規登録', class: "btn btn-success" %></td>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-4">
      <table class = "table">
        <thead class = "thead-light">
          <tr>
            <th>ジャンル</th>
            <th colspan="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>