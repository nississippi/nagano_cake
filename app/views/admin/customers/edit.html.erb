<h1><%= (@customer.last_name + @customer.first_name)%>さんの会員情報編集</h1>

<div class="error-explanation">
  <% if @customer.errors.any? %>
    <h3><%= @customer.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>

  <div class="field">
    <%= f.label :'姓' %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana %>
  </div>

    <div class="field">
    <%= f.label :postal_code %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %><br />
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :is_deleted, "有効" %>
  <%= f.radio_button :is_deleted, :false %>
  <%= f.label :is_deleted, "退会" %>

  <div class="actions">
    <%= f.submit "変更を保存する" %>
  </div>
<% end %>